<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClienteAndroidAgenda.Models.CustomCalendar">
    <VerticalStackLayout>
     
        <Grid Padding="10" ColumnSpacing="10"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="Center">
      
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

      
            <Button Text="&lt;" x:Name="PreviousMonthButton" Grid.Column="0" />

          
            <Label x:Name="MonthYearLabel" Grid.Column="1" 
           HorizontalOptions="Center" VerticalOptions="Center" />

           
            <Button Text=">" x:Name="NextMonthButton" Grid.Column="2" />
        </Grid>
     
        <Grid x:Name="DaysGrid" Padding="5"
              RowSpacing="2" ColumnSpacing="2"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
  
        </Grid>
    </VerticalStackLayout>
</ContentView>
