<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClienteAndroidAgenda.Views.MainPageUser"
             Title="MainPageUser"
             xmlns:control="clr-namespace:ClienteAndroidAgenda.Models"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="PerfilButton"
                     Text="Perfil"
                     Priority="0"
                     Order="Primary"
                    Clicked="PerfilButton_Clicked"
                     />
    </ContentPage.ToolbarItems>

  
    <Grid RowDefinitions="*,Auto">
        
        
        
        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center">
            <Label 
                Text="Página de usuario"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />


            <control:CustomCalendar/>

        </VerticalStackLayout>

        <Button Grid.Row="1" 
                Text="Cerrar sesión"
                BackgroundColor="IndianRed"
                FontAttributes="Bold" 
                Margin="5" 
                Clicked="Button_ClickedAsync"
                VerticalOptions="End" />
    </Grid>

</ContentPage>